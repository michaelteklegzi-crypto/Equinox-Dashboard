{
    "name": "equinox-dashboard",
    "version": "1.0.0",
    "description": "Equinox Dashboard - Desktop Application",
    "main": "electron/main.js",
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "prisma": "5.22.0"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "@prisma/client": "5.22.0",
        "@quixo3/prisma-session-store": "^3.1.19",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.6",
        "dotenv": "^17.2.4",
        "express": "^5.2.1",
        "express-session": "^1.19.0",
        "nodemailer": "^8.0.1",
        "pg": "^8.18.0"
    },
    "scripts": {
        "postinstall": "cd client && npm install && npx prisma generate --schema=server/prisma/schema.prisma",
        "build:client": "cd client && npm run build",
        "electron:dev": "electron .",
        "electron:build": "npm run build:client && electron-builder",
        "electron:build:win": "npm run build:client && electron-builder --win",
        "electron:build:mac": "npm run build:client && electron-builder --mac",
        "electron:build:linux": "npm run build:client && electron-builder --linux",
        "electron:build:all": "npm run build:client && electron-builder -mwl"
    }
}
{
    "name": "equinox-dashboard",
    "version": "1.0.0",
    "description": "Equinox Dashboard - Desktop Application",
    "main": "electron/main.js",
    "scripts": {
        "postinstall": "cd client && npm install && cd ../server && npm install",
        "build:client": "cd client && npm run build",
        "electron:dev": "electron .",
        "electron:build": "npm run build:client && electron-builder",
        "electron:build:win": "npm run build:client && electron-builder --win",
        "electron:build:mac": "npm run build:client && electron-builder --mac",
        "electron:build:linux": "npm run build:client && electron-builder --linux",
        "electron:build:all": "npm run build:client && electron-builder -mwl"
    },
    "build": {
        "appId": "com.equinox.dashboard",
        "productName": "Equinox Dashboard",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "files": [
            "electron/**/*",
            "client/dist/**/*",
            "server/**/*",
            "!server/node_modules/**/*",
            "!server/dev.db",
            "!server/prisma/dev.db"
        ],
        "extraResources": [
            {
                "from": "server/prisma/schema.prisma",
                "to": "server/prisma/schema.prisma"
            },
            {
                "from": "server/prisma/dev.db",
                "to": "server/prisma/seed.db"
            }
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "build/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "build/icon.icns",
            "category": "public.app-category.business"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "build/icon.png",
            "category": "Office"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    },
    "keywords": [
        "equinox",
        "dashboard",
        "actions",
        "management"
    ],
    "author": "Equinox",
    "license": "ISC",
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "electron-store": "^8.1.0"
    }
}
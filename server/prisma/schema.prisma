// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ SESSION ============

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

// ============ USERS & RBAC ============

model User {
  id                 String    @id @default(uuid())
  name               String
  email              String    @unique
  password           String
  role               String    @default("Viewer") // 'Admin' | 'Supervisor' | 'Operator' | 'Viewer'
  mustChangePassword Boolean   @default(false)
  isActive           Boolean   @default(true)
  lastLogin          DateTime?
  createdAt          DateTime  @default(now())

  // Relations
  drillingEntries    DrillingEntry[]
  maintenanceLogs    MaintenanceLog[]
  incidentReports    IncidentReport[]
  auditLogs          AuditLog[]
  fileUploads        ImportStaging[]
}

// ============ FLEET ============

model Rig {
  id                   String    @id @default(uuid())
  name                 String    @unique // "Rig 01", "Rig 12"
  type                 String    // "RC" | "Diamond" | "GC"
  site                 String?   // "North Field", "South Field"
  operationalCapacity  Float?    // Max meters/day
  commissionDate       DateTime?
  status               String    @default("Active") // "Active" | "Maintenance" | "Retired"

  // Financial defaults (can be overridden per project)
  defaultCostPerMeter  Float?

  drillingEntries      DrillingEntry[]
  maintenanceLogs      MaintenanceLog[]
  equipment            Equipment[]

  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

// ============ PROJECTS ============

model Project {
  id               String    @id @default(uuid())
  name             String
  clientName       String?
  location         String?
  startDate        DateTime?
  endDate          DateTime?
  contractedRate   Float?    // Rate per meter from client
  status           String    @default("Active") // "Active" | "Completed" | "On Hold"

  drillingEntries  DrillingEntry[]
  financialParams  FinancialParam[]

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

// ============ DRILLING ENTRIES ============

model DrillingEntry {
  id                String    @id @default(uuid())
  date              DateTime
  shift             String    // "Day" | "Night"

  rigId             String
  rig               Rig       @relation(fields: [rigId], references: [id])

  projectId         String
  project           Project   @relation(fields: [projectId], references: [id])

  // Production
  metersDrilled     Float
  holeDepth         Float?    // Current hole depth
  bitType           String?   // "PDC", "Tricone", etc.
  formation         String?   // "Sandstone", "Shale", "Mixed"
  mudType           String?   // "Water-Based", "Oil-Based"

  // Hours Breakdown (Must sum to totalShiftHours)
  totalShiftHours   Float     @default(12)
  drillingHours     Float     @default(0)
  mechanicalDowntime Float    @default(0)
  operationalDelay  Float     @default(0)
  weatherDowntime   Float     @default(0)
  safetyDowntime    Float     @default(0)
  waitingOnParts    Float     @default(0)
  standbyHours      Float     @default(0)

  // Legacy (Keep for backward compatibility if needed, or deprecate)
  nptHours          Float     @default(0) 
  downtimeCategory  String?   

  // Costs
  fuelConsumed      Float?    // Liters
  consumablesCost   Float?    // USD

  // Metadata
  remarks           String?
  supervisorName    String?
  status            String    @default("Submitted") // "Draft" | "Submitted" | "Approved"

  createdById       String
  createdBy         User      @relation(fields: [createdById], references: [id])

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([date])
  @@index([rigId])
  @@index([projectId])
  @@index([date, rigId])
}

// ============ FINANCIAL PARAMETERS ============

model FinancialParam {
  id                String    @id @default(uuid())
  name              String    // "Global Default", "Rig-01 Override", etc.
  scope             String    @default("global") // "global" | "rig" | "project"

  rigId             String?   // If scope = "rig"
  projectId         String?   // If scope = "project"
  project           Project?  @relation(fields: [projectId], references: [id])

  // Costs
  costPerMeter      Float?
  fuelCostFactor    Float?    // Cost per liter
  consumablesFactor Float?    // Multiplier
  laborCostFactor   Float?    // Cost per hour
  
  // Targets & Defaults
  defaultShiftHours Float?    @default(12)
  targetAvailability Float?   @default(90) // Percentage
  targetUtilization  Float?   @default(75) // Percentage

  isActive          Boolean   @default(true)

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

// ============ MAINTENANCE ============

model MaintenanceLog {
  id              String    @id @default(uuid())
  equipmentName   String
  maintenanceType String    // "Preventive" | "Corrective"
  description     String

  rigId           String?
  rig             Rig?      @relation(fields: [rigId], references: [id])

  cost            Float?
  hoursSpent      Float?
  performedBy     String?
  datePerformed   DateTime

  createdById     String
  createdBy       User      @relation(fields: [createdById], references: [id])

  createdAt       DateTime  @default(now())
}

// ============ INCIDENTS ============

model IncidentReport {
  id              String    @id @default(uuid())
  incidentType    String    // "Safety" | "Environmental" | "EquipmentDamage"
  dateOccurred    DateTime
  description     String
  severity        String    // "Low" | "Medium" | "High" | "Critical"

  reportedById    String
  reportedBy      User      @relation(fields: [reportedById], references: [id])

  createdAt       DateTime  @default(now())
}

// ============ DOWNTIME (STANDALONE) ============

model DowntimeLog {
  id              String    @id @default(uuid())
  category        String    // "Mechanical" | "Operational" | "Weather" | "WaitingOnParts" | "Safety"
  startTime       DateTime
  endTime         DateTime?
  durationHours   Float?
  description     String
  equipmentId     String?

  createdAt       DateTime  @default(now())
}

// ============ AUDIT LOG ============

model AuditLog {
  id            String    @id @default(uuid())
  entityType    String    // "DrillingEntry" | "User" | "FinancialParam" | "Rig" | "Project"
  entityId      String?
  action        String    // "CREATE" | "UPDATE" | "DELETE"
  changedField  String?
  oldValue      String?
  newValue      String?

  changedById   String
  changedBy     User      @relation(fields: [changedById], references: [id])

  changedAt     DateTime  @default(now())
}

// ============ WEATHER INTELLIGENCE ============

model WeatherLog {
  id          Int      @id @default(autoincrement())
  date        DateTime @unique
  rainfall    Float    // mm
  temperature Float    // Celsius
  humidity    Float?
  isRainy     Boolean  // Derived flag
  createdAt   DateTime @default(now())
}

// ============ OPERATIONAL INTELLIGENCE (PHASE 1) ============

model ModelVersion {
  id              String   @id @default(uuid())
  version         String   // e.g. "v1.0.0" or "RF-2023-10-27"
  trainedAt       DateTime @default(now())
  mape            Float?   // Mean Absolute Percentage Error (Validation)
  dataWindow      String?  // "60d"
  featureSetHash  String?  // unique hash of training data/features used
  isActive        Boolean  @default(false)
  
  forecasts       Forecast[]
}

model Forecast {
  id              String   @id @default(uuid())
  rigId           String
  date            DateTime // Date being forecasted
  predictedMeters Float
  confidenceScore Float
  
  modelUsedId     String
  modelVersion    ModelVersion @relation(fields: [modelUsedId], references: [id])
  
  createdAt       DateTime @default(now())
  
  @@index([rigId, date])
}

model Equipment {
  id               String   @id @default(uuid())
  name             String
  rigId            String?
  rig              Rig?     @relation(fields: [rigId], references: [id])
  
  mtbfHours        Float?   // Mean Time Between Failures (Manufacturer or Calculated)
  lastServiceHours Float?   // Engine hours at last service
  currentHours     Float    @default(0) // Current engine hours reading
  type             String?  // "Engine", "Pump", "TopDrive", "Generator"
  currentRiskScore Float?   // 0.0 - 1.0 (Calculated via Logistic Function)
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model KPISnapshot {
  id              String   @id @default(uuid())
  date            DateTime
  category        String   // "Global", "RigType:RC", "RigType:Diamond"
  avgMeters       Float
  avgAvailability Float
  
  createdAt       DateTime @default(now())
  
  @@unique([date, category])
}

model ImportStaging {
  id          String   @id @default(uuid())
  batchId     String   // Group for transaction
  rowNumber   Int
  rawData     Json     // The raw Excel row as JSON
  status      String   // "Pending", "Valid", "Error", "Imported"
  errorMsg    String?
  
  uploadedById String
  uploadedBy   User    @relation(fields: [uploadedById], references: [id])
  
  createdAt   DateTime @default(now())
  
  @@index([batchId])
}
